.datepicker-wrapper
  width 100%
  height 100%
  position relative

  .datepicker-result
    width 100%
    height 100%
    outline none
    cursor pointer

  .datepicker-container
    position absolute
    z-index 1001
    top 100%
    min-width 200px
    transition all .3s ease
    height 0
    overflow-y hidden
    opacity 0
    display flex
    flex-direction column
    justify-content space-around
    background #fff

    &.active
      height 180px
      opacity 1

    .datepicker-header
      height 30px
      display flex
      flex-direction row
      align-items center
      justify-content space-around

      .icon
        display block
        width 16px
        height 16px
        cursor pointer

      .icon-double-arrow-left
        background-image url('./double-arrow-left.png')
        background-size 100% 100%
        background-repeat no-repeat

      .icon-double-arrow-right
        background-image url('./double-arrow-left.png')
        background-size 100% 100%
        background-repeat no-repeat
        transform rotate(180deg)

      .icon-arrow-left
        background-image url('./arrow-left.png')
        background-size 100% 100%
        background-repeat no-repeat

      .icon-arrow-right
        background-image url('./arrow-left.png')
        background-size 100% 100%
        background-repeat no-repeat
        transform rotate(180deg)

    .datepicker-body
      flex 1
      display flex
      flex-direction column
      justify-content space-around

      .week-header
        display flex
        flex-direction row
        align-items center
        justify-content space-around

      .week-detail

        .line
          display flex
          flex-direction row
          align-items center
          justify-content space-around

          .week-item
            flex 1
            text-align center
            cursor pointer

            &.disabled {
              cursor not-allowed
              opacity: .3
            }
