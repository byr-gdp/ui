$color = #333

.carousel-wrapper
  width 100%
  height 100%
  position relative
  overflow hidden

  .carousel-item
    width 100%
    height 100%
    position absolute
    left 100%

    &.active
      transition left 2s ease-in-out

    &.center
      left 0

    &.left
      left -100%

    &.right
      left 100%

.photo-0
  background $color

.photo-1
  background red
  // top 75px

.photo-2
  background blue
